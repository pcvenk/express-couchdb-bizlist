extends layout

block content
    .row
        h1.text-center.main-title Business List

        ul.listings
            each business, i in businesses
                li
                    a(href='/business/show/'+business.id) #{business.value.name}
                    br
                    | Location: #{business.value.city}, #{business.value.address}
                    br
                    | Phone: #{business.value.phone}
